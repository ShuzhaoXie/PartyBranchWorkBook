<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bnucist2016cs.xieshuzhao.partybranchworkbook.data.BookContentActivity"
    tools:showIn="@layout/activity_book_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000"
                android:id="@+id/content_label"
                android:textSize="28sp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <View
                android:background="#666666"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/content_spot"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/content_time"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <View
                android:background="#666666"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:text="Summary"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <TextView
                android:textColor="#000"
                android:id="@+id/content_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <View
                android:background="#666666"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:text="News"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/content_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"/>

            <TextView
                android:text="Pictures"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/content_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>




</android.support.constraint.ConstraintLayout>
